@model ItemListViewModel

<h1>List of shop items (@Model.CurrentViewName) View</h1>
<a href="/Item/Table">Table View</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <partial name="_ItemCard_Grid" model="item" />
    }
</div>
<p>
    <a class="btn btn-secondary" asp-controller="Item" asp-action="Create">
        Create new item
    </a>
</p>