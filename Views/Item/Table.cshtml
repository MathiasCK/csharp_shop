@model IEnumerable<MyShop.Models.Item>

    <div class="container">
        <h1>@ViewBag.CurrentViewName</h1>
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("0.0 NOK")</td>
                    <td>@item.Description</td>
                </tr>
            }</tr>
        </table>
    </div>

