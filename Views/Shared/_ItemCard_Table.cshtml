@model Item

<tr>
    <td>@Model.Id</td>
    <td><a asp-controller="Item" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></td>
    <td>@Model.Price.ToString("0.0 NOK")</td>
    <td>@Model.Description</td>
    <td>
        <img src="@Model.ImageUrl" alt="An image of @Model.Name" style="max-width:80px; max-height:80px" />
    </td>
    <td>
        <a asp-action="Update" asp-route-id="@Model.Id">Update</a>
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </td>
</tr>

